generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid())
  email       String    @unique
  senha       String
  nome        String?
  departamento String
  curso       String
  fotoPerfil  String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
  avaliacoes  Post[]
  comentarios Comentarios[]
}


model Post {
  id           Int        @id @default(autoincrement())
  usuario      User    @relation(fields: [usuarioID], references: [id], onDelete: Cascade)
  usuarioID    String
  professor    Professor  @relation(fields: [professorID], references: [id], onDelete: Cascade)
  professorID  Int
  disciplina   Disciplina @relation(fields: [disciplinaID], references: [id], onDelete: Cascade)
  disciplinaID Int
  conteudo     String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime?  @updatedAt
  comentarios  Comentarios[]
}

model Comentarios {
  id         Int        @id @default(autoincrement())
  usuario    User    @relation(fields: [usuarioID], references: [id], onDelete: Cascade)
  usuarioID  String
  avaliacao  Post  @relation(fields: [avaliacaoID], references: [id], onDelete: Cascade)
  avaliacaoID Int
  conteudo   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime?  @updatedAt
}

model Professor {
  id           Int         @id @default(autoincrement())
  nome         String
  departamento String       
  disciplina   Disciplina[] @relation("ProfessorToDisciplina")
  createdAt    DateTime    @default(now())
  updatedAt    DateTime?   @updatedAt
  avaliacoes   Post[]
}

model Disciplina {
  id           Int         @id @default(autoincrement())
  nome         String
  professorID  Int         @unique
  professor    Professor   @relation("ProfessorToDisciplina" ,fields: [professorID], references: [id])
  createdAt    DateTime    @default(now())
  updatedAt    DateTime?   @updatedAt
  avaliacoes   Post[]
}
